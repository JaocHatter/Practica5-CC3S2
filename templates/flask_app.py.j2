from flask import Flask
import os
import socket

app = Flask(__name__)

@app.route('/')
def hola_mundo():
    return f"Hola mundo! \n PORT: {os.environ.get('PORT', 'UNKNOWN')}! " \
           f"Hostname: {socket.gethostname()}"

if __name__ == '__main__':
    port = int(os.environ.get('PORT', 5000))
    app.run(host='0.0.0.0', port=port)